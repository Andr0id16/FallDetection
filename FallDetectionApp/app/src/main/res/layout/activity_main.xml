<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="149dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="149dp"
        android:text="@string/app_name"
        android:textColor="#9C27B0"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="40sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.8">

        <TextView
            android:id="@+id/accelerometerHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:text="@string/sensor_name1"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/gold"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/accelerometerHeading"
            app:layout_constraintVertical_bias="0.8">

            <TextView
                android:id="@+id/acc_axis1"
                android:layout_width="107dp"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="@string/axis_1"
                android:textAlignment="center"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/acc_axis2"
                android:layout_width="142dp"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="@string/axis_2"
                android:textAlignment="center"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@+id/acc_axis1" />

            <TextView
                android:id="@+id/acc_axis3"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="@string/axis_3"
                android:textAlignment="center"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@+id/acc_axis2" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/accelerometerHeading"
            app:layout_constraintVertical_bias="0.8">

            <TextView
                android:id="@+id/acc_axis_value1"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="@string/empty_value"
                android:textAlignment="center"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/acc_axis_value2"
                android:layout_width="141dp"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:text="@string/empty_value"
                android:textAlignment="center"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@+id/acc_axis1" />

            <TextView
                android:id="@+id/acc_axis_value3"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:text="@string/empty_value"
                android:textAlignment="center"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@+id/acc_axis2" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gyroscopeHeading"
            android:text="@string/sensor_name2"
            android:textAlignment="center"
            android:textSize="20sp"
            android:paddingTop="10dp"
            android:textColor="@color/gold"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/accelerometerHeading"
            app:layout_constraintVertical_bias="0.8">

            <TextView
                android:id="@+id/gyro_axis1"
                android:layout_width="107dp"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="@string/axis_1"
                android:textAlignment="center"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/gyro_axis2"
                android:layout_width="142dp"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="@string/axis_2"
                android:textAlignment="center"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@+id/acc_axis1" />

            <TextView
                android:id="@+id/gyro_axis3"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="@string/axis_3"
                android:textAlignment="center"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@+id/acc_axis2" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/accelerometerHeading"
            app:layout_constraintVertical_bias="0.8">

            <TextView
                android:id="@+id/gyro_axis_value1"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="@string/empty_value"
                android:textAlignment="center"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/gyro_axis_value2"
                android:layout_width="141dp"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:text="@string/empty_value"
                android:textAlignment="center"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@+id/acc_axis1" />

            <TextView
                android:id="@+id/gyro_axis_value3"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:text="@string/empty_value"
                android:textAlignment="center"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@+id/acc_axis2" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>